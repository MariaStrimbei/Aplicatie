<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetHotelApplication.ReservationEntryPage"
             Title="ReservationEntryPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Reservation" Clicked="OnReservationAddedClicked" />
    </ContentPage.ToolbarItems>
    <ListView x:Name="listView" Margin="20" ItemSelected="OnListViewItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout>
                        <Label Text="FurryFriends Lodge" FontSize="16" FontAttributes="Bold"/>
                        <Label Text="{Binding CheckInDate, StringFormat='Check-In Date: {0:dd/MM/yyyy HH:mm}'}" FontSize="14" />
                        <Label Text="{Binding CheckOutDate, StringFormat='Check-Out Date: {0:dd/MM/yyyy HH:mm}'}" FontSize="14" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
