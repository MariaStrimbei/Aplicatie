<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PetHotelApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PetHotelApplication"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Contact"
        ContentTemplate="{DataTemplate local:ContactPage}"
        Route="ContactPage" />

    <ShellContent
        Title="My Reservations"
        ContentTemplate="{DataTemplate local:ReservationEntryPage}"
        Route="ReservationEntryPage" />

</Shell>
